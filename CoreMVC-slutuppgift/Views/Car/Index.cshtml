@model List<CoreMVC_slutuppgift.ViewModels.CarViewModel>

@{
    ViewData["Title"] = "Car List";
}

<!DOCTYPE html>
<html>
<head>
    <title>Car List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1>Car List</h1>


        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Year</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                       
                        <td>@car.Brand</td>
                        <td>@car.Model</td>
                        <td>@car.Year</td>
                        <td>
                            <a href="/cars/edit/@car.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/cars/delete/@car.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

