@model CoreMVC_slutuppgift.Models.Car

<div class="container mt-5">
    <h1>Delete Car</h1>
    <h3>Are you sure you want to delete this car?</h3>

    <div>
        <p><strong>Brand:</strong> @Model.Brand</p>
        <p><strong>Model:</strong> @Model.Model</p>
        <p><strong>Year:</strong> @Model.Year</p>
    </div>

    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/cars" class="btn btn-secondary">Cancel</a>
    </form>
</div>
